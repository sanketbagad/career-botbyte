generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Application {
  id         String   @id @default(autoincrement())
  name       String
  email      String
  program    String
  resumeUrl  String?
  coverLetter String?
  experience String?
  expectations String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt @default(now())
}
